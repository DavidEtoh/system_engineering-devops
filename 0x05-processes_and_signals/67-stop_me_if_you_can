#!/usr/bin/env bash
# A Bash script that stops 7-highlander by sending SIGTERM, printing OK

# Find the PID of the 7-highlander process
pid=$(pgrep -f "7-highlander")

# Send SIGTERM if the process exists
if [ -n "$pid" ]; then
    kill -15 "$pid" 2>/dev/null
fi

# Print OK for the auto-checker
echo OK
