#!/usr/bin/env bash
# Script to send SIGTERM to the 7-highlander process

# Find the PID of the 7-highlander process
PID=$(pgrep -f "./7-highlander")

# If we found the process, send SIGTERM
if [ -n "$PID" ]; then
    kill -SIGTERM "$PID"
    echo "Sent SIGTERM to 7-highlander process (PID: $PID)"
else
    echo "7-highlander process not found"
fi
