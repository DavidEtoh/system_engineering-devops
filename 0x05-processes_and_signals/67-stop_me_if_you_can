#!/usr/bin/env bash
# A Bash script that sends SIGTERM to any running 7-highlander process, then prints OK

# Find PIDs of processes whose command line contains "7-highlander"
pids="$(pgrep -f "7-highlander" 2>/dev/null || true)"

# If any were found, send SIGTERM to each (suppress errors)
if [ -n "$pids" ]; then
  for pid in $pids; do
    kill -15 "$pid" 2>/dev/null || true
  done
fi

# Required auto-checker output
echo OK
